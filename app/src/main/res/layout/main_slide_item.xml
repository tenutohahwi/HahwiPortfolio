<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llSlideItem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">
        <ImageView
            android:id="@+id/ivSlideImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/slide_notice2"/>
        <TextView
            android:id="@+id/tvSlideTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학습"
            android:textSize="15dp"
            android:textColor="@color/text_three"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSlideChildItem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/tvSlideChildTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학습"
            android:layout_marginLeft="60dp"
            android:textSize="15dp"
            android:textColor="@color/text_six"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSlideItemSetting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:padding="5dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/slide_setting"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textSize="15dp"
            android:textColor="@color/text_six"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivision"/>


</LinearLayout>
